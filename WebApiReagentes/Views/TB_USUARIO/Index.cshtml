@model IEnumerable<WebApiReagentes.TB_USUARIO>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuários</h2>
<hr />
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            USUÁRIO
        </th>
        <th>
            EMAIL
        </th>
        <th>
          Tipo
        </th>
        <th>
            @Html.ActionLink("NOVO USUÁRIO", "Create", null, new { @class = "btn btn-success btn-large" })
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DS_NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DS_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DS_TIPO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_USUARIO }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Excluir", "Delete", new { id = item.ID_USUARIO }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
