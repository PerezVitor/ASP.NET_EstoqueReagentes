@model WebApiReagentes.TB_USUARIO

@{
    ViewBag.Title = "Excluir";
}

<h2>Exclusão de Usuário</h2>
<hr />
<h3>Você realmente deseja excluir o dados deste empréstimo?</h3>
<div>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>USUÁRIO</th>
            <th>SENHA</th>
            <th>EMAIL</th>
            <th>Tipo</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.DS_NOME)</td>
            <td>@Html.DisplayFor(model => model.DS_SENHA)</td>
            <td>@Html.DisplayFor(model => model.DS_EMAIL)</td>
            <td>@Html.DisplayFor(model => model.DS_TIPO)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger btn-lg" /> |
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
